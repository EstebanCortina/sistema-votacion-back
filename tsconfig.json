{
  "compilerOptions": {
    "strict": false,
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@routes/*":["routes/*"],
      "@controllers/*":["controllers/*"],
      "@middleware/*":["middleware/*"],
      "@config/*":["config/*"],
      "@services/*":["services/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/env_variables.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}